@{
    string connectionStringName = HttpContext.Current.Request.Cookies["ConnectionStringName"] != null ? HttpContext.Current.Request.Cookies["ConnectionStringName"].Value : "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
	<title>ProMaster Assistant</title>
    @Styles.Render("~/bundles/less")
	@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
	<body>
		<div class="header row-fluid">
			<div class="span5">
				<span class="appname">ProMaster Assistant</span>
				<br/>
				<span id="current-connection" class="connection-name">@connectionStringName</span>
			</div>
			<div class="span7">
				<ul class="navbar">
					<li @Html.GetActiveMainMenu("Database")>
						<a href="@Url.Action("Index","Home")">Database Connection</a>
					</li>
					<li @Html.GetActiveMainMenu("Activity")>
						<a href="@Url.Action("Index","Activity")">Activity Manager</a>
					</li>
					<li @Html.GetActiveMainMenu("Workflow")>
						<a href="@Url.Action("Index","Workflow")">Workflow Configuration</a>
					</li>
					<li @Html.GetActiveMainMenu("GL")>
						<a href="@Url.Action("Index","GL")">GL Configuration</a>
					</li>
				</ul>
			</div>
		</div>
		@RenderBody()
		@Scripts.Render("~/bundles/jquery")
		@Scripts.Render("~/bundles/bootstrap")
		@RenderSection("scripts", required: false)
	</body>
</html>
