@model List<ProMasterAssistant.Models.UserConnectionString>

<div class="main-container">
	<br/><br/>
	<a href="#add-dialog" role="button" class="btn" data-toggle="modal">Add Connection...</a>
	<br/><br/>
	<table id="list" class="connections">
		<thead>
			<tr><th colspan="2">Connections</th></tr>
		</thead>
		<tbody>
			@foreach(var item in Model)
			{
				<tr>
					<td>@item.ConnectionName</td>
					<td>@item.ConnectionString</td>
				</tr>	
			}
		</tbody>
	</table>
</div>


<div id="add-dialog" class="modal hide fade">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h3>New ConnectionString</h3>
	</div>
	<form>
		<div class="modal-body">
			<div class="control-group">
				<label for="connection_name">Connection Name</label>
				<input class="input-large" autofocus type="text" id="connection_name" name="connection_name" maxlength="50" required="required"/>
			</div>
			<div class="control-group">
				<label for="connection_string">Connection String</label>
				<input class="input-xxlarge" type="text" id="connection_string" name="connection_string" maxlength="255" required="required" placeholder="Server=;Database=;User Id=;Password=;" size="80"/>
			</div>
		</div>
	</form>
	<div class="modal-footer">
		<button id="cancelbtn" data-dismiss="modal" aria-hidden="true" class="btn">Cancel</button>
		<button id="savebtn" type="submit" class="btn btn-primary">Save</button>
	</div>
</div>


@section scripts
{
<script type="text/javascript" src="~/Scripts/database.js"></script>
}	
