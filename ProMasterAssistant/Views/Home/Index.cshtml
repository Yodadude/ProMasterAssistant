
<div class="main-container">
	<br/><br/>
	<a href="#add-dialog" role="button" class="btn" data-toggle="modal">Add Connection...</a>
	<a href="#" role="button" id="delbtn" class="btn">Delete Connection...</a>
	<a href="#" role="button" id="setbtn" class="btn">Set Active Connection</a>
	<br/><br/>
	<table class="connections">
		<thead>
			<tr><th>Name</th><th>Server</th><th>Database</th><th>UserId</th><th>Password</th></tr>
		</thead>
		<tbody id="list">
		</tbody>
	</table>
</div>


<div id="add-dialog" class="modal hide fade">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h3>New ConnectionString</h3>
	</div>
	<form>
		<div class="modal-body">
			<div class="control-group">
				<label for="connection_name">Connection Name</label>
				<input class="input-xlarge" autofocus type="text" id="connection_name" name="connection_name" maxlength="50" required="required" />
			</div>
			<div class="control-group">
				<label for="connection_string">Server Name</label>
				<input class="input-xlarge" type="text" id="server_name" name="server_name" maxlength="255" required="required" />
			</div>

			<div class="control-group">
				<label for="connection_string">Database Name</label>
				<input class="input-xlarge" type="text" id="database_name" name="database_name" maxlength="255" required="required" />
			</div>

			<div class="control-group">
				<label class="control-label" for="connection_string">User ID</label>
				<input class="input-xlarge" type="text" id="user_id" name="user_id" maxlength="255" required="required" />
			</div>

			<div class="control-group">
				<label for="connection_string">Password</label>
				<input class="input-xlarge" type="text" id="password" name="password" maxlength="255" required="required" />
			</div>

		</div>
	</form>
	<div class="modal-footer">
		<button id="cancelbtn" data-dismiss="modal" aria-hidden="true" class="btn">Cancel</button>
		<button id="savebtn" type="submit" class="btn btn-primary">Save</button>
	</div>
</div>


@section scripts
{
<script type="text/javascript" src="~/Scripts/database.js"></script>
}	
